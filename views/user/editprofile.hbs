<button> <a href="/user/profile/{{user._id}}">Go back</a></button>

<div class="canva">
  <div class="box-glass container-form">
    <h2>Edit Profile</h2>
    <form
      action="/user/profile/edit/{{user._id}}"
      method="POST"
      enctype="multipart/form-data"
    >
      <fieldset class="input-box-white">
        <input
          type="text"
          name="username"
          id="username"
          value="{{user.username}}"
        />

      </fieldset>
      <fieldset class="input-box-white">
        <textarea
          placeholder="In one setence, describe your interests"
          name="interests"
          id="interests"
          class="interests"
          cols="30"
          rows="5"
        >{{user.interests}}</textarea>
      </fieldset>
      <fieldset class="input-box-white">
        <input type="file" id="profileImg" name="profileImg" />
      </fieldset>
      {{#if errorMessage}}
        {{errorMessage}}
      {{/if}}
      <button class="btn-green-small" type="submit">Save changes</button>
    </form>
  </div>

</div>