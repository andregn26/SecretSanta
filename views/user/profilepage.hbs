<div id="sectionProfile">
  <div class="my-container profile">
    <img class="profileImg" src="{{user.profileImg}}" />

    <div class="nameProfile">
      <h3 class="">{{user.username}}</h3>

      <a href="/user/profile/edit/{{user._id}}">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-pencil-square edit-icon"
          viewBox="0 0 16 16"
        >
          <path
            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
          ></path>
          <path
            fill-rule="evenodd"
            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
          ></path>
        </svg>
      </a>

    </div>
    <h5>{{user.interests}}</h5>
  </div>

  <div class="box-glass container-groups-wrap">
    {{#if usersInGroup}}
      {{#each usersInGroup}}
        <div class="box-glass-group" style="width: 7rem;">
          <img src="{{this.groupImg}}" class="card-img-top" alt="group_image" />
          <div class="card-body">
            <h5>
              <a href="/group/group/{{_id}}"> {{this.groupName}} </a></h5>
          </div>
        </div>
      {{/each}}
    {{else}}

      <p class="empty">You aren't in any group, yet. </p>

    {{/if}}
  </div>

  <button class="btn-green">
    <a class="btn-link-white" href="/group/creategroup">Create a group</a></button>
</div>