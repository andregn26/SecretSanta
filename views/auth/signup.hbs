<section class="canva">
  <div class="box-glass container-form">
    <h2>Sign Up</h2>
    <form action="/auth/signup" method="POST" enctype="multipart/form-data">
      <div class="input-box-white">
        <input type="text" name="username" placeholder="Your name" />
      </div>
      <div class="input-box-white">
        <input type="email" name="email" placeholder="Email" />
      </div>
      <div class="input-box-white">
        <input type="password" name="password" placeholder="Password" />
      </div>
      <div class="input-box-white">
        <input type="file" id="profileImg" name="profileImg" />
      </div>
      <div>
        <input class="btn-green" type="submit" value="Sign Up" />
      </div>

      <p class="forget">Already registered?
        <a href="/auth/login"> Log In</a></p>
    </form>
    {{#if errorMessage}}

      <p style="color:orangered">{{errorMessage}}</p>

    {{/if}}
  </div>
</section>