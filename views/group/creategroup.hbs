<h1>Create Group page</h1>

<form action="/group/creategroup" method="post">
  <fieldset>
    <label for="groupName">
      Group name
    </label>
    <input required type="text" id="groupName" name="groupName" />
  </fieldset>

  <fieldset>
    <label for="description">
      Description
    </label>
    <textarea name="description" id="description" cols="50" rows="4"></textarea>
  </fieldset>

  <fieldset>
    <label for="price">
      Gift price limit
    </label>
    <input required type="number" id="price" name="price" min="1" />
  </fieldset>

  <fieldset>
    <label for="groupImg">
      Upload a cover image
    </label>
    <input type="file" id="groupImg" name="groupImg" />
  </fieldset>

  <button type="submit">Create group</button>
</form>